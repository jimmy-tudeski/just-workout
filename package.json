{
  "name": "just-workout",
  "version": "0.0.1",
  "description": "The simple workout journal",
  "main": "build/index.js",
  "engine": {
    "node": "10.8.0"
  },
  "scripts": {
    "test": "jest --detectOpenHandles",
    "start": "node build/index.js",
    "dev": "cross-env NODE_ENV=development nodemon --exec babel-node app/index.js",
    "build": "babel app -d build",
    "eslint": "eslint app/**",
    "mongod": "mongod --dbpath=\"d:\\data\\db\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^2.2.3",
    "cross-env": "^5.2.0",
    "koa": "^2.7.0",
    "koa-body": "^4.1.0",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.11",
    "mongoose": "^5.4.22",
    "mongoose-beautiful-unique-validation": "^7.1.1",
    "uuid": "^3.3.2",
    "validator": "^10.11.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.3",
    "axios": "^0.18.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "eslint": "5.12.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.10"
  },
  "jest": {
    "modulePaths": [
      "<rootDir>/app/"
    ],
    "verbose": true,
    "testEnvironment": "node"
  },
